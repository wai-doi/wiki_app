<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= markdown(@article.body) %>
</p>

<% if @article.image.attached? %>
<p>
    <strong>画像:</strong>
    <%= image_tag url_for(@article.image) %>
</p>
<% end %>

